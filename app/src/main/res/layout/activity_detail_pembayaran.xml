<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopUp.DetailPembayaran">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/colorgradienbt">

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo">

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idkartu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center_horizontal"
                android:text="ID Kartu"
                android:textColor="#CC000000"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/Tampilidkartu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idkartu"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#CC000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/outlet"
                android:layout_below="@id/Tampilidkartu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center_horizontal"
                android:text="Outlet"
                android:textColor="#CC000000"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/Tampiloutlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/outlet"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#CC000000"
                android:textSize="18sp" />



            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CC000000"
                android:layout_below="@id/Tampiloutlet"
                android:layout_margin="5dp">
            </View>


            <TextView
                android:id="@+id/kodetransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Tampiloutlet"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center_horizontal"
                android:text="Kode Transaksi"
                android:textColor="#CC000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Tampilkoderefrensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kodetransaksi"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#CC000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CC000000"
                android:layout_below="@id/Tampilkoderefrensi"
                android:layout_margin="5dp">
            </View>


            <TextView
                android:id="@+id/namapengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Tampilkoderefrensi"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center_horizontal"
                android:text="Nama Pengguna"
                android:textColor="#CC000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Tampilnama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namapengguna"
                android:layout_marginTop="9dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#CC000000"
                android:textSize="18sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center_horizontal"
                android:text="Rekening Bank"
                android:textColor="#CC000000"
                android:textSize="16sp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CC000000"
                android:layout_below="@+id/bank"
                android:layout_margin="5dp">

            </View>

            <TextView
                android:id="@+id/Tampilrekeningbank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#f0932b"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/jumlahtopup"
                android:layout_below="@id/Tampilrekeningbank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center_horizontal"
                android:text="Jumlah Transaksi"
                android:textColor="#CC000000"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CC000000"
                android:layout_below="@+id/jumlahtopup"
                android:layout_margin="5dp">

            </View>

            <TextView
                android:id="@+id/Tampiljumlahtopup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jumlahtopup"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#f0932b"
                android:textSize="40sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_below="@+id/cardview2"
                android:paddingTop="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/buttonkonfirmasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Konfirmasi Pembayaran"
                    />
            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>



</RelativeLayout>